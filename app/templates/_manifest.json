{
    "name": "<%= appname %>",
    "version": "0.0.0",
    "manifest_version": 2,
    "description": "<%= description %>",
    "icons": {
        "16": "images/icon-16.png",
        "19": "images/icon-19.png",
        "38": "images/icon-38.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "page": "background.html"
    },
    "permissions": [
        "storage"
    ],
    "options_page": "options.html",
    "browser_action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "19": "images/icon-19.png",
            "38": "images/icon-38.png",
            "128": "images/icon-128.png"
        },
        "default_title": "<%= appname %>",
        "default_popup": "popup.html"
    }
}
